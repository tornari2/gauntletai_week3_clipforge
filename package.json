{
  "name": "clipforge",
  "version": "1.0.0",
  "description": "ClipForge MVP - Desktop Video Editor",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently --kill-others-on-fail --restart-tries 0 \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "video",
    "editor",
    "electron",
    "desktop"
  ],
  "author": "ClipForge Team",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^8.2.2",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.12",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.clipforge.app",
    "productName": "ClipForge",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/ffmpeg",
      "node_modules/ffprobe-static/ffprobe"
    ],
    "extraResources": [
      "node_modules/ffmpeg-static/ffmpeg",
      "node_modules/ffprobe-static/ffprobe"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
